                                        @{
                                            
                                        }
                                        <button class=" btn btn-success" id="save">Save</button>
                                    </form>
                                </td>
                            </tr>
                           
                        }
                    
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Add a click event listener to the Save button
        $("#save").click(function (e) {
            // Prevent the default form submission
            e.preventDefault();

            // Clear previous error messages
            $(".error-message").text("");

            // Loop through each row in the table
            var isValid = true;

            $(".marks-input").each(function () {
                var marks = parseFloat($(this).val());
                var PloMarks = parseFloat($(this).closest("tr").find(".plo-marks").val());

                // Check if the entered marks are within the valid range
                if (marks < 0 || marks > PloMarks) {
                    // Display an error message
                    $(this).addClass("is-invalid");
                    $(this).closest("td").find(".error-message").text("Invalid marks. Please enter valid marks between 0 and " + PloMarks + ".");
                    isValid = false;
                } else {
                    $(this).removeClass("is-invalid");
                }
            });

            // If all validations pass, submit the form
            if (isValid) {
                $(this).closest("form").submit();
            }
        });
    });
</script>