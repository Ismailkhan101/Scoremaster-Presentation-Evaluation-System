                    </thead>
                    <tbody>
                        
                        @foreach (var item in ViewBag.rubriclevel)
                            {
                            var p = 0;
                            int k = 0;
                            decimal cridation = item.PloMarks;
                            decimal poorle = cridation / 4;
                            decimal BelowAverage = cridation / 2;
                            decimal AboveAverage = BelowAverage + poorle;
                            decimal Excellent = cridation;

