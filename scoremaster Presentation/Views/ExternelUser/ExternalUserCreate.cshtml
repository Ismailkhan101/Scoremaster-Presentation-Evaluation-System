@model scoremaster_Presentation.Models.ExternalUserscs
<div class="card card border-dark">
    <div class="card-header btn btn-primary border border-warning rounded">
      Add Examiner
    </div>
    <div class="card-body">
        <div class="container" style="width:auto;background-color:#343957;">
            <form asp-action="ExternalUserCreate" method="post">
                <input type="text" hidden class="form-control"  asp-for="EventId" >
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" placeholder="Enter Name" asp-for="Name" required>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email </label>
                            <input type="text" asp-for="Email" class="form-control" placeholder="Enter Email" required>

                        </div>

                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Contact</label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Enter Contact">

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Departments</label>
                            <select asp-for="DepartmentId" class="form-control group-select form-select" required asp-items="@(new SelectList(ViewBag.DeptList,"DepartmentId","DeptName"))">
                                <option value="">Select Department</option>

                            </select>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary form-control" style="margin-top:31px;">Save</button>
                        </div>
                    </div>
                </div>


            </form>
        </div>

    </div>
</div>